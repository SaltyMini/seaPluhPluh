{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\Source Files\\main.cpp",
                "${workspaceFolder}\\Source Files\\window.cpp",
                "${workspaceFolder}\\Source Files\\utils\\utils.cpp",
                "${workspaceFolder}\\Source Files\\utils\\consoleColourUtil.cpp",
                "${workspaceFolder}\\Source Files\\breakout.cpp",
                "${workspaceFolder}\\Source Files\\utils\\breakoutUtils.cpp",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-I${workspaceFolder}\\Header Files",
                "-lgdi32",
                "-ldwmapi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}